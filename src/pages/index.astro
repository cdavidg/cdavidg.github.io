<style>
  .hero {
    padding: var(--spacing-3xl) 0;
    background: linear-gradient(135deg, var(--color-bg) 0%, var(--color-bg-secondary) 100%);
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: var(--spacing-3xl);
    align-items: center;
  }

  .hero-text h1 {
    font-size: 3rem;
    margin-bottom: var(--spacing-md);
  }

  .highlight {
    color: var(--color-primary);
  }

  .hero-text h2 {
    font-size: var(--font-size-2xl);
    color: var(--color-text-light);
    font-weight: 400;
    margin-bottom: var(--spacing-lg);
  }

  .hero-description {
    font-size: var(--font-size-lg);
    margin-bottom: var(--spacing-md);
    max-width: 600px;
  }

  .hero-social {
    margin-bottom: var(--spacing-xl);
  }

  .hero-actions {
    display: flex;
    gap: var(--spacing-md);
    flex-wrap: wrap;
  }

  .hero-image {
    display: flex;
    justify-content: center;
  }

  .profile-img {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    object-fit: cover;
    border: 4px solid var(--color-primary);
    box-shadow: var(--shadow-lg);
  }

  .profile-placeholder {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    background: var(--color-bg-secondary);
    border: 4px solid var(--color-primary);
    box-shadow: var(--shadow-lg);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .placeholder-text {
    color: var(--color-text-light);
    font-size: var(--font-size-base);
    font-weight: 500;
  }

  .section-header {
    position: relative;
  }

  .code-icon {
    font-size: var(--font-size-4xl);
    color: var(--color-primary);
    opacity: 0.1;
    position: absolute;
    top: -20px;
    right: 20px;
    font-weight: bold;
  }

  .project-card h3 a {
    color: var(--color-text);
    font-size: var(--font-size-xl);
  }

  .project-tags {
    display: flex;
    gap: var(--spacing-xs);
    flex-wrap: wrap;
    margin-top: var(--spacing-md);
  }

  .tag {
    background: var(--color-primary);
    color: white;
    padding: 2px 8px;
    border-radius: 12px;
    font-size: var(--font-size-sm);
    font-weight: 500;
  }

  .featured-badge {
    background: var(--color-accent);
    color: white;
    padding: 2px 8px;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    margin-right: var(--spacing-xs);
  }

  .blog-card h3 a {
    color: var(--color-text);
  }

  .blog-card time {
    color: var(--color-text-light);
    font-size: var(--font-size-sm);
    font-style: italic;
  }

  .section-footer {
    text-align: center;
    margin-top: var(--spacing-2xl);
  }

  @media (max-width: 768px) {
    .hero-content {
      grid-template-columns: 1fr;
      gap: var(--spacing-xl);
      text-align: center;
    }

    .hero-text h1 {
      font-size: 2.5rem;
    }

    .hero-actions {
      justify-content: center;
    }

    .profile-img,
    .profile-placeholder {
      width: 150px;
      height: 150px;
    }

    .code-icon {
      display: none;
    }
  }
</style>